{
	"name": "canis/cascade-lib",
	"description": "Cascade CRM libraries",
	"keywords": ["yii", "crm"],
	"homepage": "http://canis.io",
	"type": "yii2-extension",
	"license": "BSD-3-Clause",
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"yiisoft/yii2-imagine": "2.0.*",
		"canis/yii2-canis-lib": "*",
		"canis/yii2-deferred-action": "*",
		"canis/yii2-notification-engine": "*",
		"phpoffice/phpexcel": "*",
		"emberlabs/gravatarlib": "*",
		"bower-asset/smart-time-ago": "*",
		"bower-asset/vibe": "*",
		"bower-asset/purl": "*",
		"bower-asset/jQuery-QueryBuilder": "*",
		"yiisoft/yii2-jui": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "3.7.*",
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*",
		"mustangostang/spyc": "*",
		"fabpot/php-cs-fixer": "@stable"
	},
    "autoload": {
		"classmap": ["lib/Cascade.php"],
		"psr-4": { "cascade\\": "lib" }
    },
    "extra": {
    	"bootstrap": "cascade\\Cascade"
    }
}
